# Core
NODE_ENV=development
PORT=8301

# Database (Podman/Docker)
MONGODB_URI=mongodb://root:example@mongodb:27017/openstock?authSource=admin

# Better Auth
BETTER_AUTH_SECRET=your_better_auth_secret
# Local access:
BETTER_AUTH_URL=http://localhost:8301
# For external/VPN access, use your server's IP or domain:
# BETTER_AUTH_URL=http://your-server-ip:8301
# BETTER_AUTH_URL=http://your-domain.com:8301

# Finnhub
FINNHUB_API_KEY=your_finnhub_key
NEXT_PUBLIC_FINNHUB_API_KEY=
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Inngest AI (Gemini)
GEMINI_API_KEY=your_gemini_api_key

# Email (Nodemailer via Gmail; consider App Passwords if 2FA)
NODEMAILER_EMAIL=youraddress@gmail.com
NODEMAILER_PASSWORD=your_gmail_app_password
